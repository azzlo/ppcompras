<div class="primary-container">
  <div class="row">
    <div class="colums large-12">
      <h6 class="text-center">Requisition Info</h6>
      <table class="unstriped" style="background-color:#9CA9AB;" >
        <thead>
          <tr>
            <th width="100">Number</th>
            <th width="150">Date</th>
            <th width="150">Item</th>
            <th width="150">Material</th>
            <th width="150">Description</th>
            <th width="150">Quantity</th>
            <th width="150">Unit</th>
            <th width="150">Contact Person</th>
            <th width="150">Observations</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @requisition.number %></td>
            <td><%= @requisition.create_at %></td>
            <td><%= @requisition.item %></td>
            <td><%= @requisition.material %></td>
            <td><%= @requisition.description %></td>
            <td><%= @requisition.quantity %></td>
            <td><%= @requisition.unit %></td>
            <td><%= @requisition.contact_person %></td>
            <td><%= @requisition.observations %> </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <br>
  <div class="row">
    <div class="column small-12">
      <div class="row align-spaced">
        <div class="colums">
          <h6>My offers</h6>
        </div>
        <div class="colums end">
          <a class="button" href="#">General Report</a>
        </div>
      </div>
    </div>
    <div class="column small-12">
      <div class="colums large-10 small-offset-1">
        <table style="background-color:#9CA9AB;" >
          <thead>
            <tr>
              <th>Number supplier</th>
              <th>Unit pricing</th>
              <th>Delivery days</th>
              <th>Validity</th>
              <th>Credit days</th>
              <th>Observations</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>creo que no hicimos la relacion</td>
              <td>500</td>
              <td>5</td>
              <td>2017/08/02</td>
              <td>30</td>
              <td>todo el material en existencia</td>
              <td class="text-center"><a class="button" href="#">PDF</a></td>
            </tr>
          </tbody>
        </table>

        <div class="row">
          <%= form_for(@offer) do |f| %>
          <% if @offer.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

              <ul>
                <% offer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>


          <div class="row">
            <div class="column medium-2 align-self-bottom">
              <div class="field">
                <%= f.label :unit_pricing %>
                <%= f.text_field :unit_pricing %>
              </div>
            </div>

            <div class="column medium-1 align-self-bottom">
              <div class="field">
                <%= f.label :delivery_days %>
                <%= f.number_field :delivery_days %>
              </div>
            </div>

            <div class="column medium-2 align-self-bottom">
              <div class="field">
                <%= f.label :validity %>
                <%= f.text_field :validity, class: "datepicker" %>
              </div>
            </div>
            <div class="column medium-1 align-self-bottom">
              <div class="field">
                <%= f.label :credit_days %>
                <%= f.number_field :credit_days %>
              </div>
            </div>

            <div class="column medium-1 align-self-bottom">
              <div class="field">
                <%= f.label :recomm %>
                <%= f.check_box :recommended %>
              </div>
            </div>

            <div class="column medium-5 align-self-bottom">
              <div class="field">
                <%= f.label :observations %>
                <%= f.text_area :observations %>
              </div>
            </div>

            <div class="column medium-5 align-self-bottom">
              <div class="field">
                <%= f.label :requisition_id %>
                <%= f.text_field :requisition_id %>
              </div>
            </div>
          </div>


          <div class="actions">
            <%= f.submit %>
          </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
