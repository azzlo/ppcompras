<div class="row">
  <div class="columns large-12">
    <h2 class="text-center">Requisitions Active</h2>
    <br>
  </div>
</div>

<div class="row">
  <div class="colums large-9 small-offset-1">

    <table class="hover tabla">
      <thead>
        <tr>
          <th width="100">Number Requisition</th>
          <th width="150">Description</th>
        </tr>
      </thead>
      <tbody>
        <% @requisitions.each do |requisition| %>
          <tr>
            <td><%= link_to requisition.number, requisition_path(requisition)  %></td>
            <td><%= requisition.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<br>
<br>
<h2 class="text-center">Requisitions Pending</h2>
<br>
<div class="row">
  <div class="colums large-9 small-offset-1">

    <table class="hover tabla">
      <thead>
        <tr>
          <th width="100">Number Requisition</th>
          <th width="150">Description</th>
          <th width="15">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @requisitions.each do |requisiton| %>
          <tr>
            <td><%= link_to requisiton.number, requisition_path(requisiton) %></td>
            <td><%= requisiton.description %></td>
            <td class="text-center"><a class="button" href="#">Send</a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
