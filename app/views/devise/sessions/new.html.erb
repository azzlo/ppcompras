<!-- Form de Login -->

<div class="row align-center">
  <div class="columns small-3">
    <div class="row align-center">
      <h1>Login</h1> <br> <br>

    </div>
    <div class="row formulario">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row align-middle">
          <div class="columns small-1">
            <i class="fi-torsos-male-female icon-medium"></i>
          </div>
          <div class="columns">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true %>
          </div>
        </div>
        <div class="row align-middle">

          <div class="columns small-1">
            <i class="fi-key"></i>
          </div>
          <div class="columns">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>


        <% if devise_mapping.rememberable? -%>
          <div class="row align-center small-10 large-expand">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
    </div>

    <div class="contenedor-boton" style="margin-top: 25px;">
      <div class="actions row small-12 align-center">
        <%= f.submit "Sign in", class: "button" %>
      </div>
    <% end %>
      <div class="row small-12 align-center">
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

